@model Onion.AppCore.DTO.DetailDTO

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Detail/Show">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create Detail</li>
    </ol>
</nav>

<form asp-action="Create" asp-controller="Detail" asp-anti-forgery="true" method="post" enctype="multipart/form-data">

    <div class="container col-10 ">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
    </div>
    <div class="container col-10 ">
        <div class="InputSuccess">@ViewBag.CreateResult</div>
    </div>

    <div class="container col-5 justify-content-center mt-3 ">
        <h2 class="text-center">Create Detail:</h2>


        <div class="row mt-4 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="Code">Code:</label>
            </div>
            <div class="col-9">
                <input type="text" name="Code" class="form-control" asp-for="Code" />
                <span asp-validation-for="Code" class="col-8" />
            </div>
        </div>

        <div class="row mt-4 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="Name">Name:</label>
            </div>
            <div class="col-9">
                <input type="text" name="Name" class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="col-8" />
            </div>
        </div>

        <div class="row mt-3 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="Amount">Amount:</label>
            </div>
            <div class="col-9">
                <input type="number" name="Amount" class="form-control" asp-for="Amount" />
                <span asp-validation-for="Amount" class="col-8" />
            </div>
        </div>

        <div class="row mt-3 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="CreateDate">Create Date:</label>
            </div>
            <div class="col-9">
                <input type="date" name="CreateDate" class="form-control" asp-for="CreateDate" value="@DateTime.Now.ToString("yyyy-MM-dd hh-mm-ss")" />
                <span asp-validation-for="CreateDate" class="col-8" />
            </div>
        </div>


        <div class="row  mt-3 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="StorekeeperId">by Storekeeper:</label>
            </div>
            <div class="col-9">

                <select class="form-select form-control" aria-label="Select" asp-for="StorekeeperId">
                    @{

                        foreach (var storekeeper in ViewBag.Storekeepers)
                        {
                            <option class="form-control" selected value="@storekeeper.Id">@storekeeper.FullName</option>
                        }
                    }
                </select>
                <span asp-validation-for="StorekeeperId" class="col-8"></span>
            </div>
        </div>


        <div class="row mb-5 mt-4 pb-4 justify-content-center">
            <div class="col-4 ">
                <a asp-action="Show" asp-controller="Detail" class="btn btn-primary  NewProject ">Back</a>
            </div>
            <div class="col-7">
                <input class="btn btn-primary  NewProject col-7" type="submit" value="Create">
            </div>
        </div>

    </div>
</form>



@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}